	},
	"item": [
		{
			"name": "1. Refresh Access Token",
			"request": {
				"method": "POST",
				"header": [],
				"url": {
					"raw": "https://accounts.zoho.in/oauth/v2/token?refresh_token={{refresh_token}}&client_id={{client_id}}&client_secret={{client_secret}}&redirect_uri={{redirect_uri}}&grant_type=refresh_token",
					"protocol": "https",
					"host": [
						"accounts",
						"zoho",
						"in"
					],
					"path": [
						"oauth",
						"v2",
						"token"
					],
					"query": [
						{
							"key": "refresh_token",
							"value": "{{refresh_token}}"
						},
						{
							"key": "client_id",
							"value": "{{client_id}}"
						},
						{
							"key": "client_secret",
							"value": "{{client_secret}}"
						},
						{
							"key": "redirect_uri",
							"value": "{{redirect_uri}}"
						},
						{
							"key": "grant_type",
							"value": "refresh_token"
						}
					]
				}
			}
		},
		{
			"name": "2. Create Document",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{access_token}}"
					}
				],
				"body": {
					"mode": "formdata",
					"formdata": [
						{
							"key": "data",
							"value": "{\n    \"requests\": {\n        \"request_name\": \"TRAVEL Policy\",\n        \"actions\": [\n            {\n                \"action_type\": \"SIGN\",\n                \"recipient_email\": \"kaushlendras1@gmail.com\",\n                \"recipient_name\": \"Kaushlendra Pratap Singh\",\n                \"signing_order\": 1,\n                \"verify_recipient\": false,\n                \"verification_type\": \"\",\n                \"verification_code\": \"\",\n                \"private_notes\": \"Please sign this document\"\n            }\n        ],\n        \"expiration_days\": 7,\n        \"is_sequential\": true,\n        \"email_reminders\": true,\n        \"reminder_period\": 3\n    }\n}",
							"type": "text"
						},
						{
							"key": "file",
							"type": "file",
							"src": "/path/to/your/document.pdf"
						}
					]
				},
				"url": {
					"raw": "https://sign.zoho.in/api/v1/requests",
					"protocol": "https",
					"host": [
						"sign",
						"zoho",
						"in"
					],
					"path": [
						"api",
						"v1",
						"requests"
					]
				}
			}
		},
		{
			"name": "3. Submit Document for Signature",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/x-www-form-urlencoded"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{access_token}}"
					}
				],
				"body": {
					"mode": "urlencoded",
					"urlencoded": [
						{
							"key": "data",
							"value": "{\n  \"requests\": {\n    \"actions\": [\n      {\n        \"verify_recipient\": false,\n        \"action_id\": \"{{action_id}}\",\n        \"action_type\": \"SIGN\",\n        \"private_notes\": \"Sign the doc\",\n        \"signing_order\": 0,\n        \"fields\": [\n        {\n           \"field_type_name\": \"Email\",\n           \"text_property\":{\n\t\t\t\"font\":\"Roboto\",\n\t\t\t\"font_size\":11,\n\t\t\t\"font_color\":\"000000\",\n\t\t\t\"max_field_length\":100,\n\t\t\t\"is_bold\":false,\n\t\t\t\"is_italic\":false\n\t\t},\n              \"field_category\": \"textfield\",\n              \"field_label\": \"Email\",\n              \"is_mandatory\": true,\n              \"page_no\": 0,\n              \"document_id\": \"{{document_id}}\",\n              \"field_name\": \"Email\",\n              \"y_coord\": 51,\n              \"action_id\": \"{{action_id}}\",\n              \"abs_width\": 160,\n              \"x_coord\": 53,\n              \"abs_height\": 20\n            }\n           ]\n          }\n         ]\n        }\n       }",
							"type": "text"
						}
					]
				},
				"url": {
					"raw": "https://sign.zoho.in/api/v1/requests/{{request_id}}/submit",
					"protocol": "https",
					"host": [
						"sign",
						"zoho",
						"in"
					],
					"path": [
						"api",
						"v1",
						"requests",
						"{{request_id}}",
						"submit"
					]
				}
			}
		}
	],
